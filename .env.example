# Sentiment and Stance Analysis API - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================
# Server Configuration
# ============================================

# Host to bind the server to
# Use 0.0.0.0 to accept connections from any IP
# Use 127.0.0.1 or localhost for local-only access
HOST=0.0.0.0

# Port to run the server on
PORT=8000

# Log level: debug, info, warning, error, critical
LOG_LEVEL=info

# Number of worker processes (production mode only)
# Recommended: (2 x CPU cores) + 1
WORKERS=4

# ============================================
# Cache Configuration
# ============================================

# Maximum number of items to store in cache
CACHE_MAX_SIZE=1000

# Default time-to-live for cache entries (in seconds)
# 3600 = 1 hour
CACHE_DEFAULT_TTL=3600

# Enable/disable caching
CACHE_ENABLED=true

# ============================================
# Performance Monitoring
# ============================================

# Time window for performance metrics (in minutes)
PERFORMANCE_WINDOW_MINUTES=60

# Memory threshold for warnings (in MB)
MEMORY_THRESHOLD_MB=500

# Enable performance monitoring middleware
PERFORMANCE_MONITORING_ENABLED=true

# ============================================
# Text Processing Configuration
# ============================================

# Maximum text length for sentiment analysis (in characters)
MAX_TEXT_LENGTH_SENTIMENT=5000

# Maximum text length for stance analysis (in characters)
MAX_TEXT_LENGTH_STANCE=5000

# Minimum text length (in characters)
MIN_TEXT_LENGTH=1

# Maximum target length for stance analysis (in characters)
MAX_TARGET_LENGTH=200

# ============================================
# API Configuration
# ============================================

# API title (shown in documentation)
API_TITLE=Sentiment and Stance Analysis API

# API version
API_VERSION=1.0.0

# API description
API_DESCRIPTION=High-Performance Text Analysis API for Sentiment and Stance Detection

# Contact email for API support
API_CONTACT_EMAIL=support@example.com

# License name
API_LICENSE_NAME=MIT

# License URL
API_LICENSE_URL=https://opensource.org/licenses/MIT

# ============================================
# CORS Configuration (if needed)
# ============================================

# Enable CORS
CORS_ENABLED=false

# Allowed origins (comma-separated)
# Use * to allow all origins (not recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Allowed methods
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Allowed headers
CORS_HEADERS=*

# ============================================
# Security Configuration
# ============================================

# Enable API key authentication (if implemented)
API_KEY_ENABLED=false

# API key header name
API_KEY_HEADER=X-API-Key

# Rate limiting (requests per minute per IP)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Database Configuration (if needed in future)
# ============================================

# Database URL (for future use)
# DATABASE_URL=sqlite:///./sentiment_api.db

# ============================================
# External Services (if needed)
# ============================================

# External NLP service URL (if using external APIs)
# EXTERNAL_NLP_SERVICE_URL=https://api.example.com/nlp
# EXTERNAL_NLP_API_KEY=your_api_key_here

# ============================================
# Development/Debug Settings
# ============================================

# Enable debug mode (more verbose logging)
DEBUG=false

# Enable auto-reload on code changes (development only)
AUTO_RELOAD=true

# Enable detailed error messages in responses
DETAILED_ERRORS=false

# ============================================
# Logging Configuration
# ============================================

# Log file path (leave empty to log to console only)
LOG_FILE=

# Log format: json or text
LOG_FORMAT=text

# Enable request logging
REQUEST_LOGGING_ENABLED=true

# Log request body (may contain sensitive data)
LOG_REQUEST_BODY=false

# ============================================
# Health Check Configuration
# ============================================

# Health check endpoint path
HEALTH_CHECK_PATH=/health

# Include detailed system info in health check
HEALTH_CHECK_DETAILED=true

# ============================================
# Metrics Configuration
# ============================================

# Enable metrics endpoints
METRICS_ENABLED=true

# Metrics endpoint prefix
METRICS_PREFIX=/metrics

# ============================================
# Deployment Configuration
# ============================================

# Environment: development, staging, production
ENVIRONMENT=development

# Application name
APP_NAME=sentiment-stance-api

# Deployment region/zone
DEPLOYMENT_REGION=local

# ============================================
# Python Path Configuration
# ============================================

# Additional Python paths (comma-separated)
# PYTHONPATH=/path/to/additional/modules

# ============================================
# Timezone Configuration
# ============================================

# Timezone for timestamps
TZ=UTC
